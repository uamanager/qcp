{
  "name": "qcp",
  "description": "Quick Cryptico Protocol",
  "version": "0.2.1",
  "author": {
    "name": "Ivan Panarin",
    "email": "faradey.ivan@gmail.com"
  },
  "license": "GPL-3.0-or-later",
  "registry": "https://registry.npmjs.org/",
  "private": false,
  "main": "lib/qcp.js",
  "browser": "lib/qcp.umd.js",
  "module": "lib/qcp.esm.js",
  "typings": "lib/types/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uamanager/qcp"
  },
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "rollup -c rollup.config.ts",
    "commit": "git cz -a",
    "prepare": "yarn build",
    "postversion": "git push && git push --tags",
    "release": "standard-version && git push --follow-tags origin master && npm login && npm publish --access public",
    "test": "yarn build && jest",
    "docs": "transcribe --url https://github.com/uamanager/qcp/blob/master/{filename}#L{line} --prefix '//' --insert-into README.md -- src/index.ts src/protocol.ts"
  },
  "dependencies": {
    "transcribe": "^1.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/jest": "25.2.3",
    "@types/node": "12.12.42",
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "jest-junit": "10.0.0",
    "lodash.camelcase": "4.3.0",
    "rimraf": "3.0.2",
    "rollup": "2.11.2",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-sourcemaps": "0.6.2",
    "standard-version": "8.0.0",
    "rollup-plugin-typescript2": "0.27.1",
    "ts-jest": "26.5.6",
    "typescript": "3.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn docs && yarn test",
      "pre-push": "yarn test"
    }
  },
  "keywords": [
    "qcp",
    "encode",
    "decode",
    "cryptico",
    "quick",
    "protocol",
    "rsa",
    "sighning",
    "key",
    "encrypt",
    "decrypt",
    "express"
  ]
}
