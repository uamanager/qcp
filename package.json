{
  "name": "qcp",
  "description": "Quick Cryptico Protocol",
  "version": "0.3.0",
  "author": {
    "name": "Ivan Panarin",
    "email": "faradey.ivan@gmail.com"
  },
  "license": "GPL-3.0-or-later",
  "registry": "https://registry.npmjs.org/",
  "private": false,
  "main": "lib/qcp.js",
  "browser": "lib/qcp.umd.js",
  "module": "lib/qcp.esm.js",
  "typings": "lib/types/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uamanager/qcp"
  },
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "rollup -c rollup.config.ts",
    "commit": "git cz -a",
    "prepare": "husky install && yarn build",
    "postversion": "git push && git push --tags",
    "release": "standard-version && git push --follow-tags origin master && npm login && npm publish --access public",
    "test": "yarn build && jest",
    "docs": "transcribe --url https://github.com/uamanager/qcp/blob/master/{filename}#L{line} --prefix '//' --insert-into README.md -- src/index.ts src/protocol.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@rollup/plugin-commonjs": "22.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.2.1",
    "@types/jest": "28.1.3",
    "@types/node": "17.0.25",
    "commitizen": "4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "husky": "7.0.4",
    "jest": "28.1.1",
    "jest-junit": "13.2.0",
    "rimraf": "3.0.2",
    "rollup": "2.70.2",
    "rollup-plugin-sourcemaps": "0.6.3",
    "rollup-plugin-typescript2": "0.31.2",
    "standard-version": "9.3.2",
    "transcribe": "1.1.2",
    "ts-jest": "28.0.5",
    "typescript": "4.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "qcp",
    "encode",
    "decode",
    "cryptico",
    "quick",
    "protocol",
    "rsa",
    "sighning",
    "key",
    "encrypt",
    "decrypt",
    "express"
  ]
}
